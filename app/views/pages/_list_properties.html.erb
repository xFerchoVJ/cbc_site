<!-- Property List Start -->
<div class="container w-75 py-5">
  <div class="container" data-controller="property-spinner">
    <div class="row g-0 gx-5 align-items-end">
      <div class="col-lg-6">
        <div class="text-start mx-auto mb-5 wow slideInLeft" data-wow-delay="0.1s">
          <h1 class="mb-3">Listado de Propiedades</h1>
          <p>Listado de Propiedades en Venta o Renta.</p>
        </div>
      </div>
      <div class="col-lg-6 text-start text-lg-end wow slideInRight" data-wow-delay="0.1s">
        <ul class="nav nav-pills d-inline-flex justify-content-end mb-5" role="tablist">
          <li class="nav-item me-2">
            <a class="btn btn-outline-primary" data-bs-toggle="pill" href="#tab-1">En Venta</a>
          </li>
          <li>
            <a class="btn btn-outline-primary" data-bs-toggle="pill" href="#tab-2">En Renta</a>
          </li>
        </ul>
      </div>
    </div>
    <div class="tab-content">
      <div id="tab-1" class="tab-pane fade show p-0 active">
        <div>
          <div class="row g-4">
            <% @properties_sale.each do |property|%>
              <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="property-item rounded overflow-hidden">
                  <div class="position-relative overflow-hidden">
                    <a href="">
                      <%= image_tag property.images[0], class: "img-fluid", data: { target: 'property-spinner.image' } %>
                    </a>

                    <div class="bg-primary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">
                      <%= property.sale_or_rent.capitalize %>
                    </div>
                    <div class="bg-white rounded-top text-primary position-absolute start-0 bottom-0 mx-4 pt-1 px-3">
                      <%= property.property_type.capitalize %>  
                    </div>
                  </div>
                  <div class="p-4 pb-0">
                    <h5 class="text-primary mb-3">$<%= property.price %></h5>
                    <a class="d-block h5 mb-2" href=""><%= property.name %></a>
                    <p><i class="fa fa-map-marker-alt text-primary me-2"></i><%= property.direction %></p>
                  </div>
                  <div class="d-flex border-top">
                    <small class="flex-fill text-center border-end py-2"><i
                        class="fa fa-ruler-combined text-primary me-2"></i><%= property.square_meter%> Metros Cuadrados</small>
                    <small class="flex-fill text-center border-end py-2"><i class="fa fa-bed text-primary me-2"></i>
                      <%= property.beds %> Cuartos
                    </small>
                    <small class="flex-fill text-center py-2"><i class="fa fa-bath text-primary me-2"></i><%= property.bathrooms%> Baños</small>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div id="tab-2" class="tab-pane fade p-0">
        <div>
          <div class="row g-4">
            <% @properties_rent.each do |property|%>
              <div class="col-lg-4 col-md-6">
                <div class="property-item rounded overflow-hidden">
                  <div class="position-relative overflow-hidden">
                    <a href="">
                      <%= image_tag property.images[0], class: "img-fluid", data: { target: 'property-spinner.image' } %>
                    </a>

                    <div class="bg-primary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">
                      <%= property.sale_or_rent.capitalize %>
                    </div>
                    <div class="bg-white rounded-top text-primary position-absolute start-0 bottom-0 mx-4 pt-1 px-3">
                      <%= property.property_type.capitalize %>  
                    </div>
                  </div>
                  <div class="p-4 pb-0">
                    <h5 class="text-primary mb-3">$<%= property.price %></h5>
                    <a class="d-block h5 mb-2" href=""><%= property.name %></a>
                    <p><i class="fa fa-map-marker-alt text-primary me-2"></i><%= property.direction %></p>
                  </div>
                  <div class="d-flex border-top">
                    <small class="flex-fill text-center border-end py-2"><i
                        class="fa fa-ruler-combined text-primary me-2"></i><%= property.square_meter%> Metros Cuadrados</small>
                    <small class="flex-fill text-center border-end py-2"><i class="fa fa-bed text-primary me-2"></i>
                      <%= property.beds %> Cuartos
                    </small>
                    <small class="flex-fill text-center py-2"><i class="fa fa-bath text-primary me-2"></i><%= property.bathrooms%> Baños</small>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-12 text-center mt-4 wow slideInLeft" data-wow-delay="0.3s">
      <%= link_to "Ver Más Propiedades", root_path, class: "btn btn-primary py-3 px-5"%>
    </div>
      
  </div>
</div>
<!-- Property List End -->
